<% if (pagination == 2){ %>
  <% page.posts.each(function(post){ %>
    <%- partial('article', {post: post, index: true}) %>
  <% }) %>
<% } else { %>
  <% var lastYear; %>
  <% var lastMonth; %>
  <% page.posts.each(function(post, i){ %>
    <% var year = post.date.year(); %>
    <% var month = post.date.month(); %>
    <% if (lastYear != year||lastMonth!=month){ %>
      <% lastYear = year; %>
      <% lastMonth = month; %>
      <section class="archives-wrap col-sm-12">
        <div class="archive-year-month-wrap">
          <a href="<%- url_for(config.archive_dir + post.date.format("/YYYY/MM/")) %>" class="archive-year-month"><%= post.date.format("YYYY年MM月") %></a>
        </div>
        <div class="archives">
    <% } %>
    <%- partial('archive-post', {post: post, even: i % 2 == 0}) %>
  <% }) %>
  <% if (page.posts.length){ %>
    </div></section>
  <% } %>
<% } %>
<% if (page.total > 1){ %>
  <nav class="page-nav">
    <%- paginator({
      prev_text: __('prev'),
      next_text: __('next')
    }) %>
  </nav>
<% } %>