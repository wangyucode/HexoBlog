<article id="<%= post.layout %>-<%= post.slug %>" class="article article-type-<%= post.layout %>" itemscope
         itemprop="blogPost">
    <div class="article-meta">
        <%- partial('post/date', {class_name: 'article-date', date_format: null}) %>
        <%- partial('post/category') %>
        <%- partial('post/tag') %>
    </div>
    <div class="article-inner">
        <% if (post.link || post.title){ %>
        <header class="article-header">
            <%- partial('post/title', {class_name: 'article-title'}) %>
        </header>
        <% } %>
        <div class="article-entry" itemprop="articleBody">
            <%- post.content %>
        </div>
    </div>
    <div class="container-reward">
        <img class="img-reward" src="<%- url_for('/img/reward.jpg') %>"/>
    </div>
</article>
<%- partial('post/nav') %>
<div id="comments">
    <% page.addComment = true %>
    <wycode-comments path="<%- page.path %>"></wycode-comments>
</div>